    ViewData["News"] = Resource.GetData(lang.LangMark, "News");
    ViewData["Contact_Us"] = Resource.GetData(lang.LangMark, "Contact_Us");
    ViewData["Find_Us"] = Resource.GetData(lang.LangMark, "Find_Us");
    ViewData["Address"] = Resource.GetData(lang.LangMark, "Address");
    ViewData["Address_Text"] = Resource.GetData(lang.LangMark, "Address_Text");
    ViewData["Phones"] = Resource.GetData(lang.LangMark, "Phones");
    ViewData["Mobiles"] = Resource.GetData(lang.LangMark, "Mobiles");
    ViewData["Emails"] = Resource.GetData(lang.LangMark, "Emails");
    ViewData["WebSites"] = Resource.GetData(lang.LangMark, "WebSites");
    ViewData["Recent_News"] = Resource.GetData(lang.LangMark, "Recent_News");
    ViewData["Coming_Soon"] = Resource.GetData(lang.LangMark, "Coming_Soon");
    ViewData["HomePage"] = Resource.GetData(lang.LangMark, "HomePage");
