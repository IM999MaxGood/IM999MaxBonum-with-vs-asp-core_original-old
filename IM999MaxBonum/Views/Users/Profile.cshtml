@using IM999MaxBonum.Models;
@using IM999MaxBonum.Classes;

@model User

@{
    ViewData["HeaderAddINCode"] += "<link rel='stylesheet' href='/css/users/style.css' type='text/css'>";
    ViewData["FooterAddINCode"] += "<script src='/js/users/profile.js' type='text/javascript'></script>";
    Layout = "~/Views/Shared/_LayoutOnlyHtmlWithSimplePlugin.cshtml";
    var lang = ViewBag.CurrentLang;
    var user = ViewBag.CurrentUser;
    bool isRtl = lang.Direction.Trim().ToLower() == "ltr" ? false : true;


    ViewData["Back_HomePage"] = Resource.GetData(lang.LangMark, "Back_HomePage");
    ViewData["Profile"] = Resource.GetData(lang.LangMark, "Profile");
    ViewData["Logout"] = Resource.GetData(lang.LangMark, "Logout");
    ViewData["UserName"] = Resource.GetData(lang.LangMark, "UserName");
    ViewData["Email"] = Resource.GetData(lang.LangMark, "Email");
    ViewData["IsManager"] = Resource.GetData(lang.LangMark, "IsManager");
    ViewData["IsPersonel"] = Resource.GetData(lang.LangMark, "IsPersonel");

    ViewData["Admin_Page"] = Resource.GetData(lang.LangMark, "Admin_Page");
}

<section id="section-panel">
    <div class="container panel panel-default panel-profile center-height">
        <div class="panel-body">
            <div class="row">
                <div class="profile-title">
                    <h1>@ViewData["Profile"]</h1>
                </div>
            </div>

            <div class="row">
                <div id="profile-msg" class="alert alert-danger" style="display:none;" role="alert"></div>
            </div>

            <div class="row">
                <div id="profile-detail" class="container">
                    <div class="row ">
                        <div class="col-sm-4">@ViewData["UserName"]</div>
                        <div class="col-sm-8">@Model.UserName</div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">@ViewData["Email"]</div>
                        <div class="col-sm-8">@Model.Email</div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">@ViewData["IsManager"]</div>
                        <div class="col-sm-8">@Model.IsManager</div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">@ViewData["IsPersonel"]</div>
                        <div class="col-sm-8">@Model.IsPersonel</div>
                    </div>
                </div>
            </div>
            <div class="row">
                <button type="button" id="back-homepage" class="btn btn-primary">@ViewData["Back_HomePage"]</button>
                <button type="button"  id="btn-logout" class="btn btn-danger">@ViewData["Logout"]</button>
                @if(user.IsPersonel){
                    <button type="button"  id="btn-admin" class="btn btn-dark">@ViewData["Admin_Page"]</button>
                }
            </div>
        </div>
    </div>
</section>

<script>
    var __langMark = '@lang.LangMark';
</script>