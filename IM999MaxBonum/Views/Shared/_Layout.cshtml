                    <p class="footer-heading">@ViewData["Links"]</p>
                    <ul class="footermenu">
                        <li><a data-scroll data-options='{ "easing": "easeInQuad" }' href="#HOME">@ViewData["HomePage"]</a></li>
                        <li><a data-scroll data-options='{ "easing": "easeInQuad" }' href="#ABOUT">@ViewData["About_Us"]</a></li>
                        <li><a data-scroll data-options='{ "easing": "easeInQuad" }' href="#services">@ViewData["Services"]</a></li>
                        <li><a data-scroll data-options='{ "easing": "easeInQuad" }' href="#product">@ViewData["Samples"]</a></li>
