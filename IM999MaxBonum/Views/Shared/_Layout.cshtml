    ViewData["Titr1"] = Resource.GetData(lang.LangMark, "Titr1");
    ViewData["Titr2"] = Resource.GetData(lang.LangMark, "Titr2");
    ViewData["header_content_bar"] = Resource.GetData(lang.LangMark, "header_content_bar");    
    ViewData["2014_2018"] = Resource.GetData(lang.LangMark, "2014_2018");
    ViewData["Design_Site_By"] = Resource.GetData(lang.LangMark, "Design_Site_By");
    ViewData["Link_Contact"] = Resource.GetData(lang.LangMark, "Link_Contact");
    
