<!DOCTYPE html>
<html dir="@lang.Direction" class="" lang="@lang.LangMark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
 

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="robots" content="noodp">
    <meta name="author" content="http://www.im999max.com/">

    <!-- tag for responsive view -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="publisher" href="https://www.facebook.com/Iounes.Manoochehri/">

    <link rel="canonical" href="https://www.im999max.com">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    @*
    <title>@ViewData["PageName"]  | @Resource.SiteName</title>*@
    <title>@ViewData["Title"]</title>
    <meta name="description" content="@ViewData["Description"]">
    <meta name="robots" content="index, follow">

    <!-- Google Fonts -->
    <link href='https://fonts.googleapis.com/css?family=Roboto+Condensed:300italic,400italic,700italic,400,300,700' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400italic,600italic,400,300,600,700' rel='stylesheet' type='text/css'>
    
    <link href="https://fonts.googleapis.com/css?family=Merriweather|Noto+Serif|Roboto+Slab" rel="stylesheet">

    <!-- Font awesome -->
    <link rel="stylesheet" href="~/font/font-awesome-4.7.0/css/font-awesome.min.css" type="text/css">


    <!-- menu-im999maxbonum -->
    <link rel="stylesheet" href="~/plugin/menu-im999maxbonum/menu-style.css" type="text/css">

    <!-- animate -->
    <link rel="stylesheet" href="~/css/animate.css" type="text/css">

    <!-- Bootstrap css -->
    @if (isRtl)
    {
        <link rel="stylesheet" href="~/plugin/bootstrap 3.3.5/bootstrap-rtl.min.css" type="text/css">
    }else{
        <link rel="stylesheet" href="~/plugin/bootstrap 3.3.5/bootstrap.min.css" type="text/css">
    }
    <!-- custom scrollbar plugin -->
    <link rel="stylesheet" href="~/plugin/mCustomScrollbar/jquery.mCustomScrollbar.min.css" type="text/css">

    <!-- IM999MaxBonum -->
    <link rel="stylesheet" href="~/css/style.css" type="text/css">
    @if (isRtl)
    {
        <link rel="stylesheet" href="~/css/style-fa.css" type="text/css">
    }

    <!-- icon -->
    <!---->
    <link rel="shortcut icon" href="~/img/logo32.ico">
    
    <link rel="shortcut icon" type="image/png" href="~/img/logo32.bmp">

    <script src="~/js/im999maxbonum-funcs.js" type="text/javascript" asp-append-version="true"></script>

    @*این جی.یو.آی.دی را خودم ایجاد کردم برای مطمئن شدن از این که یک سشن به چند کاربر نسبت داده نشود*@
    <script>var _im999max_guids = '@guids'; setCookie("GUIDS", "@guids", @expire);</script>

    @if (ViewData["PageTopCode"] != null)
    {
        @Html.Raw(ViewData["PageTopCode"]);
    }
</head>
<body>
    <div class="loader"></div>

    <div id="logo-tag" class="logo-tag-rel"></div>
    <header id="HOME">
        <div class="container">
            <div id="top-bar">
                
                <div id="im999max-groupname">
                    <a href="/">

                        <span class="titr1"> @ViewData["Titr1"] </span>
                        <span class="titr2"> @ViewData["Titr2"] </span>
                    </a>                        
                </div>

                <div id="main-menu-bar" class="menu-bar-rel">
                    <div class="main-menu">
                        <div id="menuToggle"><i class="fa fa-bars"></i></div>


                        @{
                            string viewMM = "~/Views/Menus/MainMenu.cshtml";
                            Html.RenderPartial(viewMM);
                        }

                    </div>

                </div>
            </div>
        </div>


        <!-- slider -->
        @if (ShowSlider)
        {           
            string viewMS = "~/Views/MainSlider/MainSlider.cshtml";
            Html.RenderPartial(viewMS);
            @*
            <partial name="MainSlider.cshtml"  for="MainSlider" />
            *@ 
        }

        <div id="container-top-bar-down" class="container container-slider-rel">
            <div id="top-bar-down">
