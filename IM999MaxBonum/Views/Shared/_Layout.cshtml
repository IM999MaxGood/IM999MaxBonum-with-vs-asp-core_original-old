    <!--Bootatrap JS -->
    @if (isRtl)
    {
        <script src="~/plugin/bootstrap 3.3.5/bootstrap-rtl.min.js" type="text/javascript" asp-append-version="true"></script>
    }else{
        <script src="~/plugin/bootstrap 3.3.5/bootstrap.min.js" type="text/javascript" asp-append-version="true"></script>
    }

    <!-- google-map -->
    <script src="https://maps-api-ssl.google.com/maps/api/js?sensor=false&key=AIzaSyCAaVX6VbSjE24uKQRjj6qLaQaC8brd4Q4"  type="text/javascript" ></script>

    <!-- menu-im999maxbonum -->
